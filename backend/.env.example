# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/wargalapor?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wargalapor
DB_USER=postgres
DB_PASSWORD=postgres

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Secret (minimal 32 karakter, HARUS diubah di production!)
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long_please_change_this

# AI Services
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here_optional

# Blockchain Configuration (Polygon Mumbai/Amoy Testnet)
BLOCKCHAIN_RPC_URL=https://rpc-amoy.polygon.technology
PRIVATE_KEY=your_private_key_without_0x_prefix
CONTRACT_ADDRESS=0xYourDeployedContractAddress

# Email Configuration (untuk notifikasi)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@laporin.com

# Google Maps API (untuk reverse geocoding)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Redis (optional, untuk caching)
REDIS_URL=redis://localhost:6379

# CORS Origins (untuk production, ganti dengan domain Anda)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
